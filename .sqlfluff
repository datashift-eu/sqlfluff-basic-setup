[sqlfluff]
verbose = 1
nocolor = False
dialect = duckdb
templater = dbt
rules = None
exclude_rules = L011,L034
output_line_length = 100
large_file_skip_byte_limit = 0
max_line_length = 10000

[sqlfluff:templater:dbt]
# When using the root-level `.sqlfluff` (in `/Users/hakamale/git`), the
# `project_dir` must point at the actual dbt project directory. `.` would
# resolve to `/Users/hakamale/git` and make dbt look for
# `/Users/hakamale/git/dbt_project.yml` which doesn't exist.
# Set the path relative to this file so dbt finds the demo project's
# `dbt_project.yml` at `/Users/hakamale/git/sqlfluff-basic-setup/demo_project`.
project_dir = ./demo_project
profiles_dir = ./demo_project

[sqlfluff:indentation]
tab_space_size = 4
indent_unit = space
indented_on_contents = False
allow_implicit_indents = False

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = lower

[sqlfluff:rules:aliasing.table]
aliasing = explicit

[sqlfluff:layout:type:comma]
line_position = leading

[sqlfluff:rules:layout.select_targets]
wildcard_policy = multiple

[sqlfluff:rules:ambiguous.column_references]
group_by_and_order_by_style = explicit

[sqlfluff:layout:type:join_clause]
line_position = alone

[sqlfluff:layout:type:join_on_condition]
keyword_line_position = leading